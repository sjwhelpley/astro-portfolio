---
import Layout from "../layouts/Layout.astro";
import SocialMedia from "../components/SocialMedia.astro";
import Card from "../components/Card.astro";

import calc from "../img/calc.png";
import form from "../img/form.png";
import MyTypingAnimation from "../components/TypingAnimation";
---

<Layout title="Samantha Whelpley">
  <section class="c12 intro">
    <h1>Hey, I'm Sam!</h1>
    <MyTypingAnimation client:load />

    <SocialMedia />
  </section>
  <div class="content">
    <main class="c12 portfolio">
      <Card
        title="Themed Calculator"
        subtitle="FrontendMentor"
        body="React application using CSS variables to handle multiple themes."
        skills="React // CSS // Vercel"
        src={calc}
        github="https://github.com/sjwhelpley/frontendmentor-calculator"
        externalLink="https://frontendmentor-calculator-app-chi.vercel.app/"
        leftImage={true}
      />

      <Card
        title="Multi-Step Form"
        subtitle="FrontendMentor"
        body="Interactive, multi-step form with error states."
        skills="React // Redux // MUI // TypeScript // Vercel"
        src={form}
        github="https://github.com/sjwhelpley/frontendmentor-multi-step-form"
        externalLink="https://frontendmentor-multi-step-form-sigma.vercel.app/"
        leftImage={true}
      />
    </main>
  </div>
</Layout>

<style>
  .intro {
    text-align: center;
  }
  .intro-details {
    line-height: 1.5em;
    margin: 10px 0 10px 0;
  }
  .heading {
    text-align: center;
    font-size: 18px;
  }
  .highlight {
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0) 50%,
      rgba(0, 109, 119, 0.1) 50%
    );
    display: inline;
  }
  .portfolio {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;
    padding: 20px;
    margin: 0 auto;
    max-width: 1200px;
  }
  .content {
    width: 80%;
    margin: 0 auto;
  }
</style>
