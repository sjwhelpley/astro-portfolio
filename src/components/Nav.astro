---
import ThemeToggle from "./ThemeToggle";

const pathname = Astro.url.pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<header class='c12 header'>
  <h2 class='name'><a href='/'>samantha joy whelpley</a></h2>

  <nav class='nav-bar'>
    <h3 class='nav-links'>
      <a class={currentPath === "" ? "active" : ""} href='/'>Work</a>
    </h3>
    <h3 class='nav-links'>
      <a class={currentPath === "about" ? "active" : ""} href='about'>About</a>
    </h3>
    <h3 class='nav-links'>
      <a class={currentPath === "resume" ? "active" : ""} href='resume'
        >Resume</a
      >
    </h3>
    <h3 class='nav-links'>
      <ThemeToggle client:load />
    </h3>
  </nav>
</header>

<script is:inline>
  window.onscroll = function () {
    myFunction();
  };
  var header = document.getElementsByClassName("header").item(0);

  function myFunction() {
    if (window.pageYOffset > 60) {
      header.classList.add("sticky");
    } else {
      header.classList.remove("sticky");
    }
  }
</script>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    line-height: 4em;
    width: 80%;
    margin: 0 auto;
  }
  .name {
    margin: 0;
    width: fit-content;
  }
  .active {
    font-weight: bold;
  }
  .hover {
    opacity: 1;
    transition: opacity linear 0.2s;
  }
  .nav-bar {
    width: 100%;
    display: flex;
    flex-direction: row;
  }
  .nav-links {
    font-weight: normal;
    text-transform: none;
    color: black;
    margin: 0 auto;
  }
  .sticky {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    box-shadow: 0 2px 24px 0 rgb(0 0 0 / 15%);
    background-color: #ffffff !important;
    animation: 500ms ease-in-out 0s normal none 1 running fadeInDown;
    padding: 0px 20px;
  }

  @media only screen and (min-width: 1100px) {
    header {
      flex-direction: row;
      align-items: unset;
    }
    .name {
      font-size: 1.5rem;
    }
    .nav-links {
      font-size: 1.25rem;
      display: inline;
      margin-left: 10vw;
    }
    .nav-bar {
      width: 70%;
    }
  }
</style>
