---
import type { ImageMetadata } from "astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  subtitle: string;
  body: string;
  skills: string;
  github: string;
  externalLink: string;
  src: ImageMetadata;
  leftImage: boolean;
}

const { github, externalLink, title, subtitle, body, skills, src, leftImage } =
  Astro.props;
---

<div class="project">
  <div
    style={{
      width: "100%",
      display: "flex",
      flexDirection: leftImage ? "row" : "row-reverse",
      flexWrap: "wrap",
    }}
  >
    <div class="img-container">
      <Image src={src} alt={title} class="image" style={{ height: "auto" }} />
    </div>
    <div class="project-content">
      <h2 style={{ marginTop: 0 }}>{title}</h2>
      <h3>{subtitle}</h3>
      <p>{body}</p>
      <p>{skills}</p>
      <div style={{ display: "flex" }}>
        <a href={github} target="_blank">
          <Icon name="mdi:github" style={{ width: 40, height: 40 }} />
        </a>
        <a href={externalLink} target="_blank">
          <Icon
            name="mdi:link-variant"
            style={{ width: 40, height: 40, marginLeft: 8 }}
          />
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  .project {
    width: 100%;
    max-width: 800px;
    transition: all 0.2s ease-in-out;
    margin: 0 auto;
    background-color: var(--card-background);
    color: var(--text-color);
    padding: 10px;
    margin-bottom: 3vw;
  }
  .img-container {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
  }
  .project .image {
    width: 90%;
    height: auto;
    max-height: 250px;
    border-radius: 4px;
  }
  .project-content {
    flex: 1;
    padding: 8px;
  }
  .mobile-reverse {
    display: flex;
    flex-direction: column-reverse;
  }
  @media only screen and (min-width: 1100px) {
    .project {
      margin: 0;
    }
    .img-container {
      flex: 1;
    }
    .project-content {
      flex: 2;
    }
    .mobile-reverse {
      display: flex;
      flex-direction: row;
    }
  }
</style>
