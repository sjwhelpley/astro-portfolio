---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  subtitle: string;
  body: string;
  href: string;
  src: ImageMetadata;
}

const { href, title, subtitle, body, src } = Astro.props;
---

<div class="project">
  <a href={href}>
    <div
      style={{
        display: "flex",
        flexDirection: "row",
        height: "100%",
        width: "100%",
        flexWrap: "wrap",
      }}
    >
      <div class="img-container">
        <Image src={src} alt="" class="image" />
      </div>
      <div class="project-content">
        <h2>{title}</h2>
        <h3>{subtitle}</h3>
        <p>
          {body}
        </p>
      </div>
    </div>
  </a>
</div>

<style>
  .project {
    width: 100%;
    border-radius: 10px;
    transition: all 0.2s ease-in-out;
    margin: 0 auto;
    background-color: var(--lightblue);
    color: black;
    padding: 10px;
    margin-bottom: 3vw;
  }
  .img-container {
    width: 100%;
  }
  .project .image {
    width: 100%;
    height: 100%;
  }
  .project-content {
    flex: 1;
    padding: 8px;
  }
  @media only screen and (min-width: 1100px) {
    .project {
      margin: 0;
      height: 350px;
    }
    .img-container {
      flex: 1;
    }
    .project .image {
      width: 100%;
      height: 350px;
    }
    .project-content {
      flex: 1;
      padding: 8px;
    }
  }
</style>
